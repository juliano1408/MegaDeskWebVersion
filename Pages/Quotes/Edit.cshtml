@page
@model MegaDeskWebVersion.Pages.Quotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DeskQuote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeskQuote.ID" />
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.DeskWidth" class="control-label"></label>
                <input asp-for="DeskQuote.DeskWidth" class="form-control" />
                <span asp-validation-for="DeskQuote.DeskWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.DeskDepth" class="control-label"></label>
                <input asp-for="DeskQuote.DeskDepth" class="form-control" />
                <span asp-validation-for="DeskQuote.DeskDepth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.NumberDrawers" class="control-label"></label>
                <input asp-for="DeskQuote.NumberDrawers" class="form-control" />
                <span asp-validation-for="DeskQuote.NumberDrawers" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="DeskQuote.DesktopMaterial" class="control-label"></label>
                <input asp-for="DeskQuote.DesktopMaterial" class="form-control" />
                <span asp-validation-for="DeskQuote.DesktopMaterial" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="DeskQuote.DesktopMaterial" class="control-label"></label>
                <select asp-for="DeskQuote.DesktopMaterial" class="form-control" name="DeskQuote.DesktopMaterial" onchange="setImage(this);">
                    <option id="/white.jpg" value="">Select a Material</option>
                    <option class="laminate" id="/laminate.jpg" value="Laminate">Laminate</option>
                    <option class="oak" id="/oak.jpg" value="Oak">Oak</option>
                    <option class="pine" id="/pine.jpg" value="Pine">Pine</option>
                    <option class="rosewood" id="/rosewood.jpg" value="Rosewood">Rosewood</option>
                    <option class="veneer" id="/veneer.png" value="Veneer">Veneer</option>
                </select>
                <img class="selectImage" src="/white.jpg" name="image-swap" /> 
                <span asp-validation-for="DeskQuote.DesktopMaterial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.RushOrder" class="control-label"></label>
                <input asp-for="DeskQuote.RushOrder" class="form-control" />
                <span asp-validation-for="DeskQuote.RushOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="link" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
